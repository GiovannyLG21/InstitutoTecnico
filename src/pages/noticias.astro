---
import Layout from '@/layouts/Layout.astro'
import { getNotices } from '@/libs/collections'
import { NoticeIcon } from '@/assets/icons'
import { MainHeader, NoticeCard } from '@/components/components'

const headerData = {
    icon: NoticeIcon.src,    
    title: 'Noticias',
    description: 'Las Ãºltimas noticias de nuestra comunidad educativa'
}

const notices = await getNotices()
---

<Layout title="Noticias">
    <main>
        <MainHeader data={headerData} iconAnimation="animate__heartBeat"/>
        <article class="flex flex-col lg:flex-row lg:flex-wrap gap-10 lg:gap-7 items-center justify-center 
            w-full xl:w-[80%] animate__animated animate__fadeIn">
            { notices.map(notice => <NoticeCard notice={notice} width="w-[85%] sm:w-[70%] md:w-[60%] lg:w-[30%]"/>) }
        </article>
    </main>
</Layout>