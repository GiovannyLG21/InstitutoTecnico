generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Constancys {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  names         String
  document      String
  documentType  String
  phone         String
  email         String
  constancyType String
  requestReason String
}

model Certificates {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  names             String
  document          String
  documentType      String
  phone             String
  email             String
  graduationProgram String
  graduationYear    String
  requestReason     String
}

model Appointments {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  names         String
  document      String
  documentType  String
  phone         String
  email         String
  subject       String
  date          String
  hour          String
  requestReason String
}
